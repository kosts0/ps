@model ContosoSite.Models.Sostav_of_project

@{
    ViewBag.Title = "Create";
}

<h2>Добавить проект</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Информация о проекте</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p>Название проекта</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Projects.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Projects.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Музыкант в проекте</p>
        <div class="col-md-10">
            @Html.DropDownList("ID_Musican", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Musican, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Роль музыканта</p>
        <div class="col-md-10">
            @Html.DropDownList("Code_role", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Code_role, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Дата формирования</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Data_including, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Data_including, "", new { @class = "text-danger" })
        </div>
    </div>

    


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить проект" class="btn btn-default" />
        </div>
    </div>
</div>
}



<div>
    @Html.ActionLink("К списку проектов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
