@model ContosoSite.Models.Compositions

@{
    ViewBag.Title = "Изменить композицию";
}

<h2>@Model.Name</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Изменение композиции</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Composotion)

        <div class="form-group">
            <p>Название</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Дата релиза</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Realise_Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Realise_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Оригинал</p>
            <div class="col-md-10">
                @Html.DropDownList("Original", null,"Original Mix", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Original, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@Html.ActionLink("К составам композиций","Index", "Soctav_of_compositions")
<div>
    @Html.ActionLink("К списку композиций", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
