@model ContosoSite.Models.Soctav_of_compositions

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Soctav_of_compositions</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p>Приглашенный</p>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Guest)
                @Html.ValidationMessageFor(model => model.Guest, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <p>Проект</p>
        <div class="col-md-10">
            @Html.DropDownList("ID_Project", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Project, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Композиция</p>
        <div class="col-md-10">
            @Html.DropDownList("ID_composition", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_composition, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("К списку составов композиций", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
