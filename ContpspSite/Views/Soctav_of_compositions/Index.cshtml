@model IEnumerable<ContosoSite.Models.Soctav_of_compositions>

@{
    ViewBag.Title = "Index";
}

<h2>Состав композиций</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Приглашенный
        </th>
        <th>
            Название композиции
        </th>
        <th>
            Название проекта
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Guest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Compositions.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Projects.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { idc = item.ID_composition, idp = item.ID_Project }) |
            @Html.ActionLink("Удалить", "Delete", new { idc = item.ID_composition, idp = item.ID_Project })
        </td>
    </tr>
}

</table>
