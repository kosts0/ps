@model ContosoSite.Models.Albom

@{
    ViewBag.Title = "Details";
}

<h2>Информация о альбоме</h2>
<h4>@(this.Model.Name.ToString())</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Информация
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Information)
        </dd>

    </dl>
</div>

<h4>Композиции альбома:</h4>
<table class="table">
    <tr>
        <th>
            Номер
        </th>
        <th>
            Название
        </th>
    </tr>
    @foreach (var item in this.Model.Compositions_in_album)
    {
        <tr>
            <td>
                @item.Number
            </td>
            <td>
                <a class="clr" href="~/Compositions/Details/@item.ID_Composition">@item.Compositions.Name</a>
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID_Alboma }) |
    @Html.ActionLink("К списку проектов", "Index")
</p>
