@model IEnumerable<ContosoSite.Models.Albom>

@{
    ViewBag.Title = "Index";
}

<h2>Список альбомов</h2>

<p>
    @Html.ActionLink("Добавить альбом", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Alboma }) |
            @Html.ActionLink("Информация", "Details", new { id=item.ID_Alboma }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Alboma })
        </td>
    </tr>
}

</table>
