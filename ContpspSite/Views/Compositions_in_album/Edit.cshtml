@model ContosoSite.Models.Compositions_in_album

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Compositions_in_album</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p>Номер композиции</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Алльбом</p>
        <div class="col-md-10">
            @Html.DropDownList("ID_Albom", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Albom.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Композиция</p>
        <div class="col-md-10">
            @Html.DropDownList("ID_Composition", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Compositions.Name, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("К списку составов альбомов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
