@model IEnumerable<ContosoSite.Models.Musicians>

@{
    ViewBag.Title = "Index";
}

<h2>Список Музыкантов</h2>

<p>
    @Html.ActionLink("Добавить музыканта", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Famili)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Father)
        </td>

        <td>

            @Html.ActionLink("Редактировать", "Edit", new { id = item.ID_Musician }) |


            @Html.ActionLink("Информация", "Details", new { id = item.ID_Musician }) |

            @Html.ActionLink("Удалить", "Delete", new { id = item.ID_Musician })

        </td>
    </tr>
}

</table>
