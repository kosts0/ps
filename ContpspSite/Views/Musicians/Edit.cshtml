@model ContosoSite.Models.Musicians

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование</h2>
<h4>@Model.Famili @Model.Name</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Musician)

        <div class="form-group">
            <p>Фамилия</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Famili, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Famili, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Имя</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Отчество</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Father, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Father, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Информация</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Information, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Information, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку музыкантов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
